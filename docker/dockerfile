# Use an ARM64-compatible base image (automatic on Apple Silicon)
FROM condaforge/mambaforge:latest

# Set environment variables to avoid interactive prompts during installation
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies needed for Julia and numerical computing
RUN apt-get update && apt-get install -y \
    libblas-dev \
    liblapack-dev \
    libopenblas-dev \
    gfortran \
    wget \
    unzip \
    build-essential \
    ca-certificates \
    && apt-get clean

# Determine architecture and download appropriate Julia
ARG TARGETARCH
RUN case "$TARGETARCH" in \
    "arm64" ) JULIA_ARCH="aarch64"; ;; \
    "amd64" | "x86_64") JULIA_ARCH="x64"; ;; \
    *) echo "Unsupported architecture: $TARGETARCH. Defaulting to x64 (amd64)."; JULIA_ARCH="x64"; ;; \
  esac \
  && JULIA_LATEST_URL=$(wget -qO- https://julialang.org/downloads/ | grep -oP "https://julialang-s3.julialang.org/bin/linux/${JULIA_ARCH}/[^'\" ]+") \
  && JULIA_URL=$(echo "$JULIA_LATEST_URL" | head -n 1) \
  && wget -q "$JULIA_URL" -O julia.tar.gz \
  && tar -xzf julia.tar.gz -C /usr/local --strip-components=1 \
  && rm julia.tar.gz

# Create a non-root user for running the container
RUN useradd -m -s /bin/bash myuser

# Set permissions and switch to the non-root user
USER myuser
WORKDIR /opt/app

# Copy the Julia project files
COPY . /opt/app/

# Install Julia dependencies - moved outside of user context for potential permission issues
RUN julia -e 'using Pkg; Pkg.activate("."); Pkg.instantiate()'

# Set the default command to start Julia REPL
CMD ["julia"]